<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.calculator.ButtonsPage1Fragment">
    <!-- Scroll Page 1 !-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- Button Line 1 !-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <!-- Buttons !-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!-- Negative/Positive Button !-->
                <Button
                    android:id="@+id/negPosButton"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:text="-/+"
                    android:textSize="20sp"
                    android:layout_weight="1"/>
                <!-- Percent Button !-->
                <Button
                    android:id="@+id/percentButton"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="%"
                    android:layout_weight="1"/>
                <!-- Clear Button !-->
                <Button
                    android:id="@+id/clearButton"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="C"
                    android:layout_weight="1"/>
                <!-- Delete Button !-->
                <Button
                    android:id="@+id/deleteButton"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="@string/del_text"
                    android:layout_weight="1"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </LinearLayout>
        <!-- Button Line 2 !-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <!-- Buttons !-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- 7 Button !-->
                <Button
                    android:id="@+id/calc7Button"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="7"
                    android:layout_weight="1"/>
                <!-- 8 Button !-->
                <Button
                    android:id="@+id/calc8Button"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="8"
                    android:layout_weight="1"/>
                <!-- 9 Button !-->
                <Button
                    android:id="@+id/calc9Button"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="9"
                    android:layout_weight="1"/>
                <!-- Division Button !-->
                <Button
                    android:id="@+id/divisionButton"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="/"
                    android:layout_weight="1"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </LinearLayout>
        <!-- Button Line 3 !-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <!-- Buttons !-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- 4 Button !-->
                <Button
                    android:id="@+id/calc4Button"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="4"
                    android:layout_weight="1"/>
                <!-- 5 Button !-->
                <Button
                    android:id="@+id/calc5Button"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="5"
                    android:layout_weight="1"/>
                <!-- 6 Button !-->
                <Button
                    android:id="@+id/calc6Button"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="6"
                    android:layout_weight="1"/>
                <!-- Multiple Button !-->
                <Button
                    android:id="@+id/multipleButton"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:text="x"
                    android:layout_weight="1"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </LinearLayout>
        <!-- Button Line 4 !-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <!-- Buttons !-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- 1 Button !-->
                <Button
                    android:id="@+id/calc1Button"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="1"
                    android:layout_weight="1"/>
                <!-- 2 Button !-->
                <Button
                    android:id="@+id/calc2Button"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="2"
                    android:layout_weight="1"/>
                <!-- 3 Button !-->
                <Button
                    android:id="@+id/calc3Button"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="3"
                    android:layout_weight="1"/>
                <!-- Extraction Button !-->
                <Button
                    android:id="@+id/extractionButton"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="-"
                    android:layout_weight="1"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </LinearLayout>
        <!-- Button Line 5 !-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <!-- Buttons !-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- Colon Button !-->
                <Button
                    android:id="@+id/colonButton"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="."
                    android:layout_weight="1"/>
                <!-- 0 Button !-->
                <Button
                    android:id="@+id/calc0Button"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="0"
                    android:layout_weight="1"/>
                <!-- Equal Button !-->
                <Button
                    android:id="@+id/equalButton"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="="
                    android:layout_weight="1"/>
                <!-- Addition Button !-->
                <Button
                    android:id="@+id/additionButton"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="+"
                    android:layout_weight="1"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>