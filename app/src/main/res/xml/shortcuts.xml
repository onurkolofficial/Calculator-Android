<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:shortcutId="item_setting"
        android:enabled="true"
        android:icon="@drawable/shortcut_settings"
        android:shortcutShortLabel="@string/settings_text"
        android:shortcutLongLabel="@string/settings_text"
        android:shortcutDisabledMessage="@string/settings_text">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="com.onurkol.app.calculator"
            android:targetClass="com.onurkol.app.calculator.activity.SettingsActivity" />
    </shortcut>

    <shortcut
        android:shortcutId="item_bookmarks"
        android:enabled="true"
        android:icon="@drawable/shortcut_history"
        android:shortcutShortLabel="@string/history_text"
        android:shortcutLongLabel="@string/history_text"
        android:shortcutDisabledMessage="@string/history_text">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="com.onurkol.app.calculator"
            android:targetClass="com.onurkol.app.calculator.activity.HistoryActivity" />
    </shortcut>

</shortcuts>